<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="pl">
<head>
    
</head>
<body>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
    <%- include('../Partial/adminNavbar')%>
    
    <h2>Edycja użytkowników</h2>

     <% if (message) { %>
        <p><%= message %></p>
        <a href="/admin/manageUsers"><button>Odśwież</button></a>
    <% } %>

<% if(users.length != 0) {%>
    <table>
        <tr>
            <th>Login</th>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Stawka</th>
            <th>Akcja</th>
        </tr>

        <% users.forEach(user => { %>
            <tr>
                <form action="/admin/editUser/<%= user.id %>" method="POST">
                    <td>
                        <input type="text" name="username" value="<%= user.username %>" required>
                    </td>
                    <td>
                        <input type="text" name="name" value="<%= user.name %>" required>
                    </td>
                    <td>
                        <input type="text" name="surname" value="<%= user.surname %>" required>
                    </td>
                    <td>
                        <input type="number" name="hourlyPay" value="<%= user.hourlyPay %>" required>
                    </td>
                    <td>
                        <button type="submit">Zatwierdź</button>
                    </td>
                </form>
            </tr>
        <% }) %>
    </table>
<% } %>


</body>
</html>